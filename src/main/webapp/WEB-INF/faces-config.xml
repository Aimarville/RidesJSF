<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_3_0.xsd"
	version="3.0">

	<!-- Home to: -->
	<navigation-rule>
		<display-name>Home.xhtml</display-name>
		<from-view-id>/Home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>create</from-outcome>
			<to-view-id>/CreateRide.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Home.xhtml</display-name>
		<from-view-id>/Home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>query</from-outcome>
			<to-view-id>/QueryRide.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Home.xhtml</display-name>
		<from-view-id>/Home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>view</from-outcome>
			<to-view-id>/ViewRides.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Home.xhtml</display-name>
		<from-view-id>/Home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/Login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<!-- CreateRide to: -->
	<navigation-rule>
		<display-name>CreateRide.xhtml</display-name>
		<from-view-id>/CreateRide.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/Home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<!-- QueryRide to: -->
	<navigation-rule>
		<display-name>QueryRide.xhtml</display-name>
		<from-view-id>/QueryRide.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/Home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<!-- Register to: -->
	<navigation-rule>
		<display-name>Register.xhtml</display-name>
		<from-view-id>/Register.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/Login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Register.xhtml</display-name>
		<from-view-id>/Register.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/Home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>Register.xhtml</display-name>
		<from-view-id>/Register.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>selection</from-outcome>
			<to-view-id>/ArrivalSelection.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<!-- Login to: -->
	<navigation-rule>
		<display-name>Login.xhtml</display-name>
		<from-view-id>/Login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>register</from-outcome>
			<to-view-id>/Register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Login.xhtml</display-name>
		<from-view-id>/Login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/Home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- View rides to: -->
	<navigation-rule>
		<display-name>ViewRides.xhtml</display-name>
		<from-view-id>/ViewRides.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/Home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>ArrivalSelection.xhtml</display-name>
		<from-view-id>/ArrivalSelection.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>arrivalView</from-outcome>
			<to-view-id>/ArrivalView.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>